<content-type>
  <display-name i18n="ct.poi">Point of interest</display-name>
  <content-display-name-script>$('heading')</content-display-name-script>
  <super-type>base:structured</super-type>
  <form>
    <input name="heading" type="TextLine">
      <label i18n="txt.heading">Heading</label>
      <occurrences minimum="1" maximum="1" />
    </input>
    <input name="coordinates" type="GeoPoint">
      <label i18n="ct.poi.coordinates">Coordinates</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="image" type="ImageSelector">
      <label i18n="txt.image">Image</label>
      <config>
        <allowPath>${site}/*</allowPath>
      </config>
    </input>
    <input name="lead" type="TextArea">
      <label i18n="txt.lead">Lead text</label>
    </input>
    <input name="body" type="HtmlArea">
      <label i18n="txt.body">Body text</label>
    </input>
  </form>
</content-type>
