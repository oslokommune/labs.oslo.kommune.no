<content-type>
    <display-name i18n="ct.person">Person</display-name>
    <super-type>base:structured</super-type>
    <form>
        <input name="name" type="TextLine">
            <label i18n="ct.person.name">Name</label>
        </input>
        <input name="image" type="ImageSelector">
            <label i18n="ct.person.image">Portrait image</label>
            <config>
                <allowPath>${site}/*</allowPath>
            </config>
        </input>
        <input name="video" type="MediaSelector">
            <label i18n="ct.person.video">Portrait video</label>
            <config>
                <allowPath>${site}/*</allowPath>
            </config>
        </input>
        <input name="role" type="TextLine">
            <label i18n="ct.person.role">Title / Role</label>
        </input>
        <input name="email" type="TextLine">
            <label i18n="ct.person.email">Email address</label>
        </input>
        <input name="mobile" type="TextLine">
            <label i18n="ct.person.phone">Mobile</label>
        </input>
        <input name="department" type="TextLine">
            <label i18n="ct.person.dept">Department</label>
        </input>
        <input name="bio" type="TextArea">
            <label i18n="ct.person.bio">Public Bio</label>
        </input>
    </form>
</content-type>
