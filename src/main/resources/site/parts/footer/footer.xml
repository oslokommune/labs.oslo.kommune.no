<part>
  <display-name i18n="parts.footer">Footer</display-name>
  <config>
    <input name="siteName" type="TextLine">
      <label i18n="parts.footer.siteName">Site name</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="siteDescription" type="TextArea">
      <label i18n="parts.footer.siteDesc">Site Description</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="menuName" type="TextLine">
      <label i18n="parts.footer.menuName">Menu header</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="menuElement" type="ContentSelector">
      <label i18n="parts.footer.menuElement">Menu element</label>
      <occurrences minimum="0" maximum="6"/>
      <config>
        <allowContentType>article</allowContentType>
        <!-- <treeMode>true</treeMode> -->
        <showStatus>true</showStatus>
        <hideToggleIcon>true</hideToggleIcon>
      </config>
    </input>
    <input name="contactTitle" type="TextLine">
      <label i18n="parts.footer.contactTitle">Contact Title</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="contactAddress" type="TextLine">
      <label i18n="parts.footer.contactAddress">Contact Address</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="contactPhone" type="TextLine">
      <label i18n="parts.footer.contactPhone">Contact Phone</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="contactEmail" type="TextLine">
      <label i18n="parts.footer.contactEmail">Contact Email</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="socialTitle" type="TextLine">
      <label i18n="parts.footer.socialTitle">Social header</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="facebook" type="TextLine">
      <label i18n="parts.footer.facebook">Facebook URL</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="twitter" type="TextLine">
      <label i18n="parts.footer.twitter">Twitter URL</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="vimeo" type="TextLine">
      <label i18n="parts.footer.vimeo">Vimeo URL</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="instagram" type="TextLine">
      <label i18n="parts.footer.instagram">Instagram URL</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </config>
</part>
